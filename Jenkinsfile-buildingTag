pipeline {
  agent any
  stages {
    stage('hello') {
      steps {
        sh 'echo hello'
      }
    }
    stage('are we buildingTag?') {
      when {
        buildingTag()
      }
      steps {
        sh "echo we're in buildingTag"
      }
    }
    stage('final') {
      steps {
        sh 'echo final stage'
      }
    }
  }
}